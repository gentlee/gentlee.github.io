{
  "name": "my-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run clean-and-copy-images; next dev --turbopack",
    "build": "npm run clean-and-copy-images; npm run generate-xss-atom; next build",
    "serve": "npx serve out",
    "start": "next start",
    "lint": "next lint",
    "generate-xss-atom": "tsx src/fs/rss-atom.ts",
    "clean-and-copy-images": "rm -rf public/articles; rsync -zavr --include='*.webp' --include='*/' --exclude='*' articles public"
  },
  "dependencies": {
    "next": "15.1.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/jsdom": "21.1.7",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "10.4.20",
    "eslint": "^9",
    "eslint-config-next": "15.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "feed": "4.2.2",
    "highlight.js": "11.11.1",
    "jsdom": "26.0.0",
    "postcss": "^8",
    "prettier": "3.4.2",
    "rehype-raw": "7.0.0",
    "rehype-stringify": "10.0.1",
    "remark-extract-frontmatter": "3.2.0",
    "remark-frontmatter": "5.0.0",
    "remark-gfm": "4.0.0",
    "remark-parse": "11.0.0",
    "remark-rehype": "11.1.1",
    "tailwindcss": "^3.4.1",
    "tsx": "4.19.2",
    "typescript": "^5",
    "unified": "11.0.5",
    "yaml": "2.6.1"
  }
}
